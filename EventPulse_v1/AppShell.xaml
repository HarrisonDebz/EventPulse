<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EventPulse_v1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:EventPulse_v1.Pages"
    Title="EventPulse"
    BackgroundColor="{StaticResource DarkBackground}"
    Shell.FlyoutBehavior="Disabled">

    <!--  âœ… Register routes for navigation  -->
    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid HeightRequest="50">
                <Label
                    Text="{Binding Title}"
                    TextColor="{StaticResource TextPrimary}"
                    VerticalOptions="Center" />
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="My Events"
            ContentTemplate="{DataTemplate pages:MyEventsPage}"
            Route="MyEventsPage" />
        <ShellContent
            Title="Create"
            ContentTemplate="{DataTemplate pages:CreateEventPage}"
            Route="CreateEventPage" />
        <ShellContent
            Title="Notifications"
            ContentTemplate="{DataTemplate pages:NotificationsPage}"
            Route="NotificationsPage" />
    </TabBar>
</Shell>