<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EventPulse_v1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EventPulse_v1"
    xmlns:pages="clr-namespace:EventPulse_v1.Pages"
    Title="EventPulse_v1"
    BackgroundColor="{StaticResource DarkBackgroundColor}"
    Shell.FlyoutBehavior="Disabled">

    <Shell.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/Colors.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Shell.Resources>

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:HomePage}"
            Route="HomePage" />
        <ShellContent
            Title="My Responses"
            ContentTemplate="{DataTemplate local:MyResponsesPage}"
            Route="MyResponsesPage" />
        <ShellContent
            Title="Create Event"
            ContentTemplate="{DataTemplate local:CreateEventPage}"
            Route="CreateEventPage" />
        <ShellContent
            Title="Notifications"
            ContentTemplate="{DataTemplate local:NotificationsPage}"
            Route="NotificationsPage" />
    </TabBar>
</Shell>