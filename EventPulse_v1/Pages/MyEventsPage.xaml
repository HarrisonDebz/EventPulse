<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EventPulse_v1.Pages.MyEventsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:EventPulse_v1.ViewModels"
    BackgroundColor="{StaticResource DarkBackground}">

    <ContentPage.BindingContext>
        <vm:MyEventsViewModel />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding MyEvents}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border Style="{StaticResource Card}">
                    <Grid Padding="12" ColumnDefinitions="*,Auto">
                        <StackLayout Grid.Column="0">
                            <Label
                                FontAttributes="Bold"
                                Text="{Binding Title}"
                                TextColor="{StaticResource TextPrimary}" />
                            <Label Style="{StaticResource SmallSecondary}" Text="{Binding WhenSummary}" />
                        </StackLayout>
                        <Button
                            Grid.Column="1"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.UnrsvpCommand}"
                            CommandParameter="{Binding .}"
                            Style="{StaticResource SecondaryButton}"
                            Text="Remove" />
                    </Grid>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>