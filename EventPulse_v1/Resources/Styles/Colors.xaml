<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Primary Colors  -->
    <Color x:Key="PrimaryColor">#512BD4</Color>
    <Color x:Key="PrimaryDark">#3B1E9C</Color>
    <Color x:Key="PrimaryLight">#7B5FE4</Color>

    <!--  Background Colors  -->
    <Color x:Key="DarkBackground">#121212</Color>
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="CardBackground">#1E1E1E</Color>
    <Color x:Key="Surface">#252525</Color>

    <!--  Text Colors  -->
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#888888</Color>
    <Color x:Key="TextDisabled">#555555</Color>

    <!--  Status Colors  -->
    <Color x:Key="SuccessColor">#4CAF50</Color>
    <Color x:Key="ErrorColor">#F44336</Color>
    <Color x:Key="WarningColor">#FF9800</Color>

    <!--  Neutral Colors  -->
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Gray100">#F5F5F5</Color>
    <Color x:Key="Gray200">#EEEEEE</Color>
    <Color x:Key="Gray500">#9E9E9E</Color>
    <Color x:Key="Gray800">#424242</Color>
</ResourceDictionary>